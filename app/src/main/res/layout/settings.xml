<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_settings">

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="36sp" />

    <LinearLayout
        android:id="@+id/f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView47"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_settings"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00CC3131"
            android:baselineAlignBottom="true"
            android:onClick="share"
            app:srcCompat="@drawable/icons8h" />

        <TextView
            android:id="@+id/textView_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#415EFF"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="#0B0B0B"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/pencil" />

        <TextView
            android:id="@+id/textView_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#415EFF"
            android:gravity="center"
            android:text="@string/feedback"
            android:textColor="#0B0B0B"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d"
        android:background="@drawable/back_settings"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="10dp"
            app:srcCompat="@drawable/translatee" />

        <TextView
            android:id="@+id/textView_changelang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#415EFF"
            android:gravity="center"
            android:text="Change\nLanguage"
            android:textColor="#0B0B0B"
            android:textSize="23sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/k"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="30sp"
        android:visibility="invisible" />


</RelativeLayout>