<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_last"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/weeks"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/work_id2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1"
                android:textColor="#0E27C1"
                android:textColorHint="#FFFFFF"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/share_btn55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/share_vector" />

            <ImageButton
                android:id="@+id/update_btn55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/edit_vector" />

            <ImageButton
                android:id="@+id/delete55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/delete_vector" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/work_monday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />


        <TextView
            android:id="@+id/work_tuesday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />


        <TextView
            android:id="@+id/work_wednesday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />


        <TextView
            android:id="@+id/work_thursday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />


        <TextView
            android:id="@+id/work_friday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />

        <TextView
            android:id="@+id/work_saturday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />


        <TextView
            android:id="@+id/work_sunday2"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:text="Learn Android"
            android:textColor="#000000"
            android:textSize="2dp" />

    </LinearLayout>

</RelativeLayout>